{
  "name": "instabytes-backend",
  "version": "2.0.0",
  "description": "API para gerenciamento de posts com upload de imagens e descrição automática",
  "main": "server.js",
  "type": "module",
  "license": "MIT",
  "private": false,
  "engines": {
    "node": ">= 18.0.0",
    "npm": ">= 8.0.0"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb",
    "gemini-ai",
    "upload",
    "api",
    "social-media",
    "instagram-clone"
  ],
  "author": {
    "name": "ESousa97",
    "email": "contato@exemplo.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ESousa97/Instabytes-Imersao-Alura-Google"
  },
  "scripts": {
    "dev": "node --watch --env-file=.env server.js",
    "start": "node server.js",
    "start:prod": "NODE_ENV=production node server.js",
    "test": "node --test",
    "lint": "eslint .",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "build": "node -e \"console.log('No build step')\"",
    "audit": "npm audit --audit-level=high",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js"
  },
  "dependencies": {
    "@google-cloud/vertexai": "^1.9.0",
    "@google/generative-ai": "^0.21.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^7.1.5",
    "helmet": "^8.1.0",
    "joi": "^17.11.0",
    "mongodb": "^7.0.0",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.3.3"
  },
  "optionalDependencies": {
    "sharp": "^0.34.5"
  }
}
